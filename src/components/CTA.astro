---
// Props para personalizar el componente
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const { 
  title = "¿Listo para mejorar su productividad?", 
  description = "Contáctenos hoy mismo y descubra cómo Mavepo y Massey Ferguson pueden transformar su operación agrícola", 
  buttonText = "Solicitar Información", 
  buttonLink = "/contacto" 
} = Astro.props;
---

<section class="py-16 bg-red-500 text-white relative overflow-hidden">
  <!-- Manchas que se muestran en todos los dispositivos -->
  <div class="absolute top-0 left-0 w-64 h-64 rounded-full bg-red-300 opacity-40 -translate-x-1/4 -translate-y-1/4"></div>
  <div class="absolute bottom-0 right-0 w-80 h-80 rounded-full bg-red-200 opacity-20 translate-x-1/4 translate-y-1/4"></div>
  
  <!-- Manchas que solo se muestran en pantallas medianas y grandes -->
  <div class="absolute top-1/2 right-10 w-40 h-40 rounded-full bg-red-300 opacity-40 -translate-y-1/3 hidden md:block"></div>
  <div class="absolute bottom-10 left-1/4 w-56 h-56 rounded-full bg-red-200 opacity-40 hidden md:block"></div>
  
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <h2 class="text-3xl font-bold mb-4">{title}</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        {description}
      </p>
      <a 
        href={buttonLink} 
        class="inline-flex items-center justify-center rounded-md font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-white text-white hover:bg-red-700 hover:text-primary px-6 py-3 text-base"
      >
        {buttonText}
      </a>
    </div>
  </div>
</section>