        <div class="border border-white inline p-2 px-3 rounded-full text-sm text-red-200 font-bold">Maquinaria Agrícola Premium</div>
        <h1 class="text-4xl font-bold mb-4 mt-6">Nuestros Productos</h1>
        <p class="text-xl text-white max-w-3xl mx-auto">
          Descubra la amplia gama de maquinaria agrícola Massey Ferguson, diseñada para maximizar su productividad y
        eficiencia en el campo
        </p>
      </div>
    </div>

    <!-- Product Categories Tabs -->
    <div class="mb-12">
      
      <div class="tabs-container flex justify-center">
        <div class="tabs-header">
          {categories.map((category, index) => (
            <button 
              class={`tab-btn ${index === 0 ? 'active' : ''}`}
              data-tab={category.id}
            >
              <span class="tab-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 8v8"></path>
                  <path d="M8 12h8"></path>
                </svg>
              </span>
              <span class="tab-text">{category.name}</span>
            </button>
          ))}
        </div>
        
        
      </div>
      


      {Object.entries(products).map(([category, items], categoryIndex) => (
        <!-- Tab Content con Cards Rediseñadas con Tailwind -->
<div 
  class={`tab-content ${categoryIndex === 0 ? 'block' : 'hidden'}`} 
  id={`tab-${category}`}
>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {items.map((product) => (
      <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
        
        {/* Imagen del producto con overlay y efecto al hover */}
        <div class="relative h-80 overflow-hidden bg-gray-50">
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
          <img 
            src={product.image || "/placeholder.svg"} 
            alt={product.name} 
            class="w-5xl max-h-full object-contain mx-auto transform group-hover:scale-105 transition-transform duration-500 filter-none" 
          />
          
          {/* Badge posicionado en la esquina superior */}
          <div class="absolute top-3 right-3 bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full z-20 shadow-md">
            Nuevo
          </div>
        </div>
        
        {/* Contenido de la card */}
        <div class="p-6">
          {/* Título y descripción */}
          <h3 class="text-xl font-bold mb-2 text-gray-800 group-hover:text-red-500 transition-colors duration-200">{product.name}</h3>
          <p class="text-gray-600 mb-4 text-sm">{product.description}</p>
          
          {/* Características con iconos */}
          <div class="mb-5">
            <h4 class="font-semibold mb-3 text-gray-700 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Características:
            </h4>
            <ul class="space-y-2">
              {product.features.map((feature) => (
                <li class="flex items-start">
                  <div class="text-red-500 mr-2 mt-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <span class="text-sm text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          
          {/* Botones y selects */}
          {product.links && product.links.length > 0 && (
            <div class="mt-6">
              {product.links.length === 1 ? (
                // Si solo hay un enlace, mostrar un botón con efecto
                <a 
                  href={product.links[0].url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="block w-full group"
                >
                  <button class="relative w-full overflow-hidden bg-gradient-to-r from-red-500 to-red-600 text-white font-medium rounded-lg px-4 py-3 flex items-center justify-center group-hover:from-red-600 group-hover:to-red-700 transition-all duration-300 shadow-md">
                    <span class="relative z-10 flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      {product.links[0].title}
                    </span>
                  </button>
                </a>
              ) : (
                // Si hay múltiples enlaces, mostrar un select estilizado
                <div class="relative">
                  <select 
                    id={`doc-select-${product.id}`} 
                    class="block w-full bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white rounded-lg px-4 py-3 appearance-none font-medium cursor-pointer shadow-md transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50"
                    onchange={`if(this.value !== '') window.open(this.value, '_blank')`}
                  >
                    <option value="" selected class="bg-white text-gray-700">Ficha Técnica</option>
                    {product.links.map((link) => (
                      <option value={link.url} class="bg-white text-gray-700">{link.title}</option>
                    ))}
                  </select>
