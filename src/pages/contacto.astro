---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

// Iconos
const icons = {
  mapPin: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-4 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>`,
  phone: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-4 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>`,
  mail: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-4 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>`,
  clock: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-4 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`,
  send: `<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>`,
};
---

<Layout title="Contacto - Mavepo">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-bold mb-4">Contacto</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Estamos aquí para responder a sus preguntas y brindarle el mejor servicio. 
        No dude en ponerse en contacto con nosotros.
      </p>
    </div>
    
    <!-- Contact Info Banner -->
    <div class="bg-gray-50 rounded-lg p-8 mb-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="flex items-start">
          <span set:html={icons.mapPin} />
          <div>
            <h3 class="font-bold text-lg mb-2">Dirección</h3>
            <p class="text-gray-600">Ruta Nacional 9, Km 123</p>
            <p class="text-gray-600">Ciudad, Provincia</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <span set:html={icons.phone} />
          <div>
            <h3 class="font-bold text-lg mb-2">Teléfono</h3>
            <p class="text-gray-600">+123 456 7890</p>
            <p class="text-gray-600">+123 456 7891</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <span set:html={icons.mail} />
          <div>
            <h3 class="font-bold text-lg mb-2">Email</h3>
            <p class="text-gray-600">info@mavepo.com</p>
            <p class="text-gray-600">ventas@mavepo.com</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <span set:html={icons.clock} />
          <div>
            <h3 class="font-bold text-lg mb-2">Horario</h3>
            <p class="text-gray-600">Lun - Vie: 8:00 - 18:00</p>
            <p class="text-gray-600">Sáb: 9:00 - 13:00</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-bold mb-6">Envíenos un mensaje</h2>
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label for="nombre" class="block font-medium text-gray-700">Nombre completo</label>
              <input 
                id="nombre" 
                name="nombre" 
                type="text"
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
            <div class="space-y-2">
              <label for="email" class="block font-medium text-gray-700">Correo electrónico</label>
              <input 
                id="email" 
                name="email" 
                type="email" 
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
          </div>
          
          <div class="space-y-2">
            <label for="telefono" class="block font-medium text-gray-700">Teléfono</label>
            <input 
              id="telefono" 
              name="telefono" 
              type="tel"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>
          
          <div class="space-y-2">
            <label class="block font-medium text-gray-700">Tipo de consulta</label>
            <div class="space-y-2">
              <div class="flex items-center space-x-2">
                <input type="radio" id="informacion" name="tipoConsulta" value="informacion" checked class="text-primary focus:ring-primary" />
                <label for="informacion">Información general</label>
              </div>
              <div class="flex items-center space-x-2">
                <input type="radio" id="ventas" name="tipoConsulta" value="ventas" class="text-primary focus:ring-primary" />
                <label for="ventas">Ventas</label>
              </div>
              <div class="flex items-center space-x-2">
                <input type="radio" id="servicio" name="tipoConsulta" value="servicio" class="text-primary focus:ring-primary" />
                <label for="servicio">Servicio técnico</label>
              </div>
              <div class="flex items-center space-x-2">
                <input type="radio" id="repuestos" name="tipoConsulta" value="repuestos" class="text-primary focus:ring-primary" />
                <label for="repuestos">Repuestos</label>
              </div>
            </div>
          </div>
          
          <div class="space-y-2">
            <label for="producto" class="block font-medium text-gray-700">Producto de interés</label>
            <select 
              id="producto" 
              name="producto"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="" selected disabled>Seleccione un producto</option>
              <option value="tractores">Tractores</option>
              <option value="cosechadoras">Cosechadoras</option>
              <option value="implementos">Implementos</option>
              <option value="repuestos">Repuestos</option>
              <option value="otro">Otro</option>
            </select>
          </div>
          
          <div class="space-y-2">
            <label for="mensaje" class="block font-medium text-gray-700">Mensaje</label>
            <textarea 
              id="mensaje" 
              name="mensaje" 
              rows="5" 
              required 
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="inline-flex items-center justify-center rounded-md font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 bg-primary hover:bg-primary-hover text-white px-4 py-2 text-sm"
          >
            <span set:html={icons.send} />
            Enviar mensaje
          </button>
        </form>
      </div>
      
      <!-- Map -->
      <div>
        <h2 class="text-2xl font-bold mb-6">Nuestra ubicación</h2>
        <div class="aspect-square md:aspect-video bg-gray-200 rounded-lg flex items-center justify-center mb-6">
          <!-- Aquí iría un mapa real -->
          <div class="text-center p-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary mx-auto mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <p class="text-gray-600">
              Mapa interactivo - Ruta Nacional 9, Km 123, Ciudad, Provincia
            </p>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="font-bold text-lg mb-4">Horario de atención</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="font-medium">Lunes a Viernes</span>
              <span>8:00 - 18:00</span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium">Sábados</span>
              <span>9:00 - 13:00</span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium">Domingos y Feriados</span>
              <span>Cerrado</span>
            </div>
          </div>
          
          <div class="mt-6 pt-6 border-t">
            <h3 class="font-bold text-lg mb-2">Servicio técnico de urgencia</h3>
            <p class="text-gray-600">
              Contamos con servicio técnico de urgencia para nuestros clientes. 
              Comuníquese al +123 456 7899.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>

</script>

